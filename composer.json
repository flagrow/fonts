{
    "name": "flagrow/fonts",
    "description": "Easily add fonts to your Flarum",
    "keywords": [
        "extension",
        "flarum",
        "flagrow",
        "fonts"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/flagrow/fonts/issues",
        "source": "https://github.com/flagrow/fonts"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.8",
        "guzzlehttp/guzzle": "^6.2"
    },
    "extra": {
        "flarum-extension": {
            "title": "Flagrow Fonts",
            "icon": {
                "name": "fas fa-font",
                "backgroundColor": "#f4f4f4",
                "color": "#5f4bb6"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/6207"
        }
    },
    "autoload": {
        "psr-4": {
            "Flagrow\\Fonts\\": "src/"
        }
    }
}
